                                <include>com.bosch.calcomp.calutil*.jar</include>
                                <include>com.bosch.ssd.icdm.jpa*.jar</include>
                            </includes>
                        </resource>
                        <resource>
                            <targetPath>WEB-INF/lib</targetPath>
                            <directory>${p2repo.path}\com.bosch.caltool.icdm.updatesite\externaldependency</directory>
                            <includes>
                                <include>ojdbc*.jar</include>
                                <include>javax.persistence_*.jar</include>
                                <include>CDMService-clientlib-*.jar</include>
                                <include>eclipselink*.jar</include>
                            </includes>
                        </resource>
                    </webResources>
                    <warSourceDirectory>WebContent</warSourceDirectory>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
