                        </manifestEntries>
                    </archive>
                    <webResources>
                        <resource>
                            <targetPath>WEB-INF/lib</targetPath>
                            <directory>${basedir}/lib</directory>
                            <includes>
                                <include>*.txt</include>
                                <include>*.xml</include>
                                <include>*.wsdl</include>
                                <include>*.jar</include>
                            </includes>
                        </resource>
                        <resource>
                            <targetPath>WEB-INF/lib</targetPath>
                            <directory>${p2repo.path}/com.bosch.caltool.icdm.updatesite/plugins</directory>
                            <includes>
                                <include>com.bosch.caltool.pwdservice.client*.jar</include>
