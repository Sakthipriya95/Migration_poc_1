<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <relativePath>../com.bosch.caltool.icdm.main/pom.xml/</relativePath>
        <groupId>com.bosch.caltool.icdm.tycho</groupId>
        <artifactId>com.bosch.caltool.icdm.main</artifactId>
        <version>${iCDM.version}</version>
    </parent>
    <artifactId>com.bosch.caltool.icdm.product-exe</artifactId>
    <packaging>eclipse-repository</packaging>
    <properties>
        <distributive.prefix>${project.build.directory}/products/iCDM</distributive.prefix>
        <exclude_p2>**/p2/**</exclude_p2>
        <exclude_artifact>**/artifacts.xml</exclude_artifact>
    </properties>

    <build>
        <directory>${project.basedir}/target-EXE</directory>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/products/iCDM/icons/</outputDirectory>
                            <nonFilteredFileExtensions>
                                <nonFilteredFileExtension>ico</nonFilteredFileExtension>
                                <nonFilteredFileExtension>xpm</nonFilteredFileExtension>
                            </nonFilteredFileExtensions>
                            <resources>
                                <resource>
                                    <directory>icons</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-director-plugin</artifactId>
                <version>${tycho.version}</version>
                <executions>
                    <execution>
                        <id>materialize-products</id>
                        <goals>
                            <goal>materialize-products</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>archive-products</id>
                        <goals>
                            <goal>archive-products</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <products>
                        <product>
                            <id>iCDM</id>
                            <rootFolder>iCDM</rootFolder>
                        </product>
                    </products>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>create-zip-files</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <zip
                                    basedir="${distributive.prefix}/win32/win32/x86_64"
                                    destfile="${project.build.directory}/iCDM-${iCDM.version}.zip"
                                    excludes="${exclude_p2},${exclude_artifact}" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <groupId>com.bosch.caltool.icdm.product-exe</groupId>
</project>
