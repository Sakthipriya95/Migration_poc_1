<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>com.bosch.caltool.icdm.cns.server</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!--
   ****************************** 
   REST Service Servlet Mapping 
   ******************************
   -->
  <servlet>
    <servlet-name>ICDM CNS Server</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
     <!-- Register REST 'resources(services)' and 'providers'-->
    <init-param>
        <param-name>jersey.config.server.provider.packages</param-name>
        <param-value>
            com.bosch.caltool.icdm.cns.server.service,
            com.bosch.caltool.icdm.cns.server.interceptor,
            com.bosch.caltool.icdm.cns.server.exceptionmapper,
            com.fasterxml.jackson.jaxrs.json
        </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ICDM CNS Server</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>
  
  <!--
  ****************************** 
  Listeners 
  ******************************
  -->
  <listener>
    <listener-class>
         com.bosch.caltool.icdm.cns.server.contextlistener.CnsContextListener 
    </listener-class>
  </listener>  
  
  <!--
   ****************************** 
   Servlet Filter 
   ******************************
  -->
  
  <filter>
    <filter-name>CnsInitializationFilter</filter-name>
    <filter-class>com.bosch.caltool.icdm.cns.server.filter.CnsInitializationFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>CnsInitializationFilter</filter-name>
    <url-pattern>/services/*</url-pattern>
  </filter-mapping>
   
</web-app>